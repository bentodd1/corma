{
  "name": "thewunder/corma",
  "description": "Convention-based Alternative ORM",
  "minimum-stability": "stable",
  "type": "library",
  "keywords": ["Object Relational Mapper", "Data Mapper"],
  "license": "MIT",
  "authors": [
    {
      "name": "Michael O'Connell",
      "email": "wundbread@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": { "Corma\\" : "src/" }
  },
  "autoload-dev": {
    "psr-4": { "Corma\\Test\\": "test/"}
  },
  "require": {
    "php": ">=7.1",
    "ext-pdo" : "*",
    "doctrine/dbal": "~2.0",
    "doctrine/inflector": "~1.3",
    "symfony/event-dispatcher": ">=2.0 <5.0.0",
    "minime/annotations": "~3.0",
    "phpunit/phpunit": "~6.0"
  },
  "require-dev": {
    "vlucas/phpdotenv": "~2.0",
    "php-coveralls/php-coveralls": "~1.0",
    "phpstan/phpstan": "~0.9"
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  },
  "suggest": {
    "robmorgan/phinx": "*"
  }
}
